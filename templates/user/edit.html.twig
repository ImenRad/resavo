{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Hello ReservationController!{% endblock %}

{% block body %}
    <div class="container mt-4 p-4">
        <div class="jumbotron">
            <h1 class="display-4">Modification</h1>
            <p class="lead">Bienvenue sur la page de modification</p>
            <hr>
        </div>
        <div class="row mt-5">
            <!-- col gauche -->
            <div class="col pl-4">

                {{ form_start(form) }}
            </div>
            <!-- col droite -->
            <div class="col pl-4">
                {{ form_row(form.room) }}
                {{ form_row(form.booking_date) }}
                {{ form_row(form.meeting) }}
                {{ form_row(form.notices) }}


            </div>
        </div>
            <div class="col-1">
                <input class="btn btn-primary" type="submit" value="valider">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}